<h1>Sign up</h1>

<div class="row">
  <div class="column small-12 medium-8 large-6 medium-centered large-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
     <!--  <%= f.label :email %><br /> -->
      <%= f.email_field :email, :placeholder => "Email", autofocus: true %>
    </div>

    <div class="field">
  <!--     <%= f.label :password %> -->
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, :placeholder => "Password", autocomplete: "off" %>
    </div>

    <div class="field">
   <!--    <%= f.label :password_confirmation %><br /> -->
      <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>





</div>
