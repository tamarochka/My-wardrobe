<div class="large-8 columns">
  <div class="row">
    <% @bottoms.each do |bottom|%>

    <div class="large-4 small-6 columns">
      <a href = "/bottoms/<%= bottom.id %>"><img src="<%= bottom.pic %>" width="200" height="200"/></a>

      <div class="panel">
        <h5><%= bottom.name %></h5>
        <h6 class="subheader">
          <ul>
            <li><%= link_to "Edit", edit_bottom_path(bottom) %></li>
            <li><%= link_to 'Delete', bottom, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </h6>
      </div>
    </div>
    <% end %>
    <div class="row">
      <% @tops.each do |top|%>
      <div class="large-4 small-6 columns">
        <a href = "/tops/<%= top.id %>"><img src="<%= top.pic %>" width="200" height="200"/></a>

        <div class="panel">
          <h5><%= top.name %></h5>
          <h6 class="subheader">
            <ul>
              <li><%= link_to "Edit", edit_top_path(top) %></li>
              <li><%= link_to 'Delete', top, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </h6>
        </div>
      </div>
      <% end %>
</div>
