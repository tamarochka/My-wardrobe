<% if @bottom.errors.any? %>
  <% @bottom.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for (@bottom) do |f| %>

<div class="large-8 columns">
  <p>
    <%= f.label :bottom_type %><br />
    <%= f.select :bottom_type, options_for_select(%w[Jeans Skirt Shorts Pants]), include_blank: true %>
  <p>

  <p>
      <%= f.label :color %><br />
      <%= f.select :color, options_for_select(%w[White Black Red Brown Blue Yellow Pink Orange Gray Multi]), include_blank: true %>

  </p>

  <p>
    <%=f.hidden_field :user_id, value: current_user.id %>
  </p>
  <p>
      <%= f.label :pic %><br />
      <%= f.file_field :pic %>

  </p>
  <p><%= f.submit %></p>
  <% end %>
</div>
